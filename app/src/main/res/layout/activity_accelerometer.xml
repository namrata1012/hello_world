<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    >
    <TableRow android:layout_marginTop="190dip"
        android:layout_marginLeft="20dip">

        <TextView
            android:id="@+id/head1"
            android:layout_width="wrap_content"
            android:text="      "
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="5dip"
            ></TextView>

        <TextView
            android:id="@+id/head2"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="15dip"
            ></TextView>

        <TextView
            android:id="@+id/head3"
            android:layout_width="90dp"
            android:text="Minimum"
            android:layout_marginLeft="15dip"
            android:textSize="15sp"
            android:textColor="#000000"></TextView>

        <TextView
            android:id="@+id/head4"
            android:text="Maximum"
            android:layout_width="90dp"
            android:textSize="15sp"
            android:layout_marginLeft="15dip"
            android:textColor="#000000"></TextView>

    </TableRow>
<TableRow android:layout_marginTop="10dip"
    android:layout_marginLeft="20dip">

    <TextView
        android:id="@+id/x_value_fixed"
        android:layout_width="wrap_content"
        android:text="x axis"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dip"
        ></TextView>

    <TextView
        android:id="@+id/x_value"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        ></TextView>

    <TextView
        android:id="@+id/x_value_min"
        android:layout_width="90dp"
        android:layout_marginLeft="15dip"
        android:textSize="15sp"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/x_value_max"
        android:layout_width="90dp"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        android:textColor="#000000"></TextView>

</TableRow>


<TableRow android:layout_marginTop="20dip"
    android:layout_marginLeft="20dip">

    <TextView
        android:id="@+id/y_value_fixed"
        android:layout_width="wrap_content"
        android:text="y axis"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dip"
        ></TextView>

    <TextView
        android:id="@+id/y_value"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        ></TextView>

    <TextView
        android:id="@+id/y_value_min"
        android:layout_width="90dp"
        android:layout_marginLeft="15dip"
        android:textSize="15sp"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/y_value_max"
        android:layout_width="90dp"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        android:textColor="#000000"></TextView>


</TableRow>

<TableRow android:layout_marginTop="20dip"
    android:layout_marginLeft="20dip">

    <TextView
        android:id="@+id/z_value_fixed"
        android:layout_width="wrap_content"
        android:text="z axis"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dip"
        ></TextView>

    <TextView
        android:id="@+id/z_value"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        ></TextView>

    <TextView
        android:id="@+id/z_value_min"
        android:layout_width="90dp"
        android:layout_marginLeft="15dip"
        android:textSize="15sp"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/z_value_max"
        android:layout_width="90dp"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        android:textColor="#000000"></TextView>
</TableRow>

</TableLayout>